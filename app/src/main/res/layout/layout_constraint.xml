<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF">

    <View
        android:id="@+id/merah"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EA2011"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/hijau"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/merah"
        android:background="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/biru"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/merah"
        android:layout_toEndOf="@id/hijau"
        android:background="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merah" />

    <View
        android:id="@+id/kuning"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/biru"
        android:background="#CDDC39"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/biru" />

    <View
        android:id="@+id/orange"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/merah" />

</androidx.constraintlayout.widget.ConstraintLayout>